<h1> All albums </h1>

<div class="container col-md-12">
  <%= link_to "New Album", new_album_path, class: "btn btn-primary pull-right" %>
</div>

<br><br>
<br><br>
<br><br>

<div class="container col-md-12">
  <% @albums.each do |album| %>
    <div class="col-md-3">
      <a href="<%= album_path(album) %>">
      <% if album.photo != nil %>
        <img src="<%= album.photo %>" class="img-responsive">
      <% else %>
        <img src="/404.gif" class="img-responsive">
      <% end %>
      </a>
      <%= link_to album.title, album_path(album) %>
    </div>
  <% end %> 
</div
